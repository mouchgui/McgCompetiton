
@{
    ViewBag.Title = "Comprtition";
    Layout = "~/Views/Shared/ManageLayout.cshtml";
}


@if (ViewBag.Comprtition.Count > 0)
{<table>
        <thead>
            <tr>
                <th>分类名称</th>
                <th>比赛名称</th>
                <th>比赛地址</th>
                <th>比赛时间</th>
                <th>比赛详情</th>
                <th>发布人</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < ViewBag.Comprtition.Count; i++)
            {
                <tr>
                    <td>@ViewBag.Comprtition[i].CategoryName</td>
                    <td>@ViewBag.Comprtition[i].CompetitionName</td>
                    <td>@ViewBag.Comprtition[i].ComAddress</td>
                    <td>@ViewBag.Comprtition[i].Comdate</td>
                    <td>@ViewBag.Comprtition[i].Comdateil</td>
                    <td>@ViewBag.Comprtition[i].UseName</td>
                    <td>@ViewBag.Comprtition[i].ComStartus</td>
                    <td>
                        @if (ViewBag.Comprtition[i].ComStartus == "待审核")
                        {
                            <a class="edit" data-id="" href="/Main/UpdateCompetition?Id=@ViewBag.Comprtition[i].CompetitionId&pass=通过">通过</a>
                            <a class="del" href="/Main/UpdateCompetition?Id=@ViewBag.Comprtition[i].CompetitionId&pass=不通过">不通过</a>
                        }
                     
                        else
                        {
                            <span>已经审核</span>
                        }
                    </td>


                </tr>
            }
        </tbody>
    </table>

    
}

